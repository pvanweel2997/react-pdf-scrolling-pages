{
  "include": ["src"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "*": ["packages/react-pdf-js/src/*", "node_modules/*"]
    },
    "jsx": "react",
    "esModuleInterop": true
  }
}
